  journal = {PLOS ONE},
  author = {van der Reijden, Karin J. and Hintzen, Niels T. and Govers, Laura L. and Rijnsdorp, Adriaan D. and Olff, Han},
  year = {18-Dec-2018},
  keywords = {Conservation science,Eigenvalues,Fisheries,Habitats,Marine conservation,Marine ecology,Principal component analysis,Sediment},
  pages = {e0208338},
  file = {C:\\Users\\The Fishes\\Zotero\\storage\\4DBAX9TG\\Reijden et al. - 2018 - North Sea demersal fisheries prefer specific benth.pdf;C:\\Users\\The Fishes\\Zotero\\storage\\Z9FGGYPW\\article.html}
