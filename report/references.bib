  journal = {Marine Ecology Progress Series},
  author = {Jennings, Simon and Pinnegar, John K. and Polunin, Nicholas V. C. and Warr, Karema J.},
  month = apr,
  year = {2001},
  keywords = {Beam trawling,Benthic epifauna,Benthic infauna,Community structure,Fishing effects,Food webs,North Sea,Stable isotopes,Trophic relationships},
  pages = {127-142},
  file = {C:\\Users\\The Fishes\\Zotero\\storage\\ZK2822X7\\Jennings et al. - 2001 - Impacts of trawling disturbance on the trophic str.pdf;C:\\Users\\The Fishes\\Zotero\\storage\\YTDZJMDJ\\p127-142.html}
