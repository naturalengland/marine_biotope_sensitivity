  author = {Chollett, Iliana and Box, Stephen J. and Mumby, Peter J.},
  year = {2016},
  keywords = {área marina protegida,desplazamiento,displacement,Honduras,imposed mobility,inherent mobility,marine protected area,movilidad impuesta,movilidad inherente,set theory,teoría de conjuntos},
  pages = {166-175},
